{
    "manifest_version": 3,
    "name": "ITLA Translator",
    "version": "1.0",
    "description": "Traduce textos seleccionados en O'Reilly autom√°ticamente",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["*://*.oreilly.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.oreilly.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  