{
  "manifest_version": 3,
  "name": "Traductor con Azure AI",
  "version": "1.0",
  "description": "Selecciona texto o im√°genes, usa Azure OCR y traduce con Azure Translator.",
  "permissions": [
      "activeTab",
      "scripting",
      "storage"
  ],
  "host_permissions": [
      "<all_urls>"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  }
}
